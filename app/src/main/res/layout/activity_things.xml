<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_things_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Title (Optional) -->
    <TextView
        android:id="@+id/thingsTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Things Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Input for new Thing -->
    <EditText
        android:id="@+id/edittext_thing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a thing..."
        android:layout_marginBottom="8dp" />

    <!-- Button to save the new Thing -->
    <Button
        android:id="@+id/button_save_thing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Thing"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Container for the saved things -->
    <LinearLayout
        android:id="@+id/container_saved_things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/bg_card"
        android:padding="12dp">
        
        <!-- Dynamically added items? Or anything else you need. -->
    </LinearLayout>

</LinearLayout>
