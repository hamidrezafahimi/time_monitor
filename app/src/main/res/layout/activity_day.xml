<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayActivity"
    android:background="?attr/colorBackground">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dayTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Example layout for day details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dayCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/dayTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add your fields for day details here -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDayInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Info" />

            <!-- Example button to confirm or update the day details -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDaySave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
