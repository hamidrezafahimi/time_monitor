<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_day_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/day_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Container for "things" -->
    <LinearLayout
        android:id="@+id/container_things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <!-- Dynamically add items or other views here -->
    </LinearLayout>

    <!-- Note field -->
    <EditText
        android:id="@+id/note_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter note..."
        android:layout_marginBottom="8dp" />

    <!-- Save note button -->
    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Note"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <!-- Fields button -->
    <Button
        android:id="@+id/button_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fields"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Spinners for stats (Start/End/Duration) - often shown in a dialog, but here are placeholders -->

    <Spinner
        android:id="@+id/spinner_start_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner_start_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner_end_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner_end_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner_duration_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner_duration_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_save_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Stats"
        android:visibility="gone"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button_change_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Stats"
        android:visibility="gone"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"/>
</LinearLayout>
