<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_report_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/report_month_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month Label"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- TableLayout for calendar -->
    <TableLayout
        android:id="@+id/report_calendar_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginBottom="8dp" >
        <!-- Add your rows/columns dynamically or in XML -->
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/report_button_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:background="@drawable/bg_button"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/report_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@drawable/bg_button"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

    <!-- A button to select things -->
    <Button
        android:id="@+id/report_button_select_things"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Things"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

    <!-- TextView showing selected things -->
    <TextView
        android:id="@+id/report_selected_things"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Things..."
        android:layout_marginTop="8dp"/>

    <!-- Summarize button -->
    <Button
        android:id="@+id/report_button_summarize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summarize"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
