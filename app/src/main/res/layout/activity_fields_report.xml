<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_fields_report_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/fieldsReportTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fields Report Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- A table for the report details -->
    <TableLayout
        android:id="@+id/report_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginBottom="16dp">
        <!-- Table rows go here -->
    </TableLayout>

    <!-- You might have a close button or something else as needed -->
</LinearLayout>
