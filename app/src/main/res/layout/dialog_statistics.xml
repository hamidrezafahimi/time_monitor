<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_statistics_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorSurface">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialogStatisticsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_statistics"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Example text or chart about statistics -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialogStatisticsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics details go here..."
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogStatisticsButtonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close"
        style="@style/Widget.MaterialComponents.Button"/>
</LinearLayout>
