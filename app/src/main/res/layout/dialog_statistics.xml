<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_stats_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="4dp"
    android:background="@drawable/bg_card"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinner_start_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!-- ... repeat for spinner_start_minute, spinner_end_hour, etc. -->

    <Button
        android:id="@+id/button_save_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Stats"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button_change_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Stats"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"/>
</LinearLayout>
