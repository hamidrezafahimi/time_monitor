<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_fields_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/fieldsTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fields Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Container for existing fields -->
    <LinearLayout
        android:id="@+id/fields_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/bg_card"
        android:padding="12dp"
        android:layout_marginBottom="16dp">
        <!-- Dynamically added fields? -->
    </LinearLayout>

    <!-- Input for a new field -->
    <EditText
        android:id="@+id/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field Name"
        android:layout_marginBottom="8dp" />

    <!-- Add field button -->
    <Button
        android:id="@+id/btn_add_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Field"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Button to open fields report -->
    <Button
        android:id="@+id/btn_report_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Report"
        android:background="@drawable/bg_button"
        android:textColor="@android:color/white"/>
</LinearLayout>
